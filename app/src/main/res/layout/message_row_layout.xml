<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtViewReceivedMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/received_message_layout"
        android:text="Receiver Message"
        android:padding="10dp"
        android:textSize="14sp"
        android:textStyle="bold"
    />
    <TextView
        android:id="@+id/txtViewSentMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="@id/txtViewReceivedMessage"
        android:background="@drawable/sent_message_layout"
        android:text="Sender Message"
        android:textSize="14sp"
        android:padding="10dp"
        android:textStyle="bold"
        />


</RelativeLayout>